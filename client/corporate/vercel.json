{
  "version": 2,
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": "out",
  "installCommand": "npm ci",
  "framework": null,
  "functions": {},
  "routes": [
    {
      "src": "/hizmetler/([^/]+)/?",
      "dest": "/hizmetler/$1/index.html"
    },
    {
      "src": "/projeler/([^/]+)/?", 
      "dest": "/projeler/$1/index.html"
    },
    {
      "src": "/blog/([^/]+)/?",
      "dest": "/blog/$1/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
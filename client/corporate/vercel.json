{
  "buildCommand": "npm run build:static",
  "outputDirectory": "out",
  "trailingSlash": true,
  "cleanUrls": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/hizmetler/(.*)",
      "destination": "/hizmetler/$1/index.html"
    },
    {
      "source": "/projeler/(.*)",
      "destination": "/projeler/$1/index.html"
    },
    {
      "source": "/blog/(.*)",
      "destination": "/blog/$1/index.html"
    }
  ]
}
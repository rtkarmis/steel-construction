# Ensure trailing slashes for static routes
/hizmetler    /hizmetler/    301
/projeler     /projeler/     301
/blog         /blog/         301

# Handle dynamic routes
/hizmetler/*  /hizmetler/:splat/index.html  200
/projeler/*   /projeler/:splat/index.html   200  
/blog/*       /blog/:splat/index.html       200

# Fallback for 404
/*            /404.html                     404